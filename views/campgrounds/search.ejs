<%- layout('layouts/boilerplate') %>

<% if (campgrounds.length) { %>
    <h1 class="fs-2 mb-4 text-muted" style="color:aliceblue">
        Search Results for "<%= searchTerm %>"
    </h1>
<% } else { %>
    <h2 class="fs-2 mb-4" style="color:aliceblue"> 
        No results for "<%= searchTerm %>"
    </h2>
    <p style="color:aliceblue">
        Please try searching again. You can use terms from the campground location in your query.
    </p>
<% } %>

<section class="row d-flex">

    <% for (let camp of campgrounds) { %>
        <div class="card camp-card mb-3" style="background-color:#0d1117;border-style:solid;border-width: 1px;border-radius: 6px;border-color: #30363d;">
            <div class="row g-0">
              <div class="col-md-4 card-img-left">                      
                  <img class="img-fluid" alt="" src="<%= camp.images[0] ? camp.images[0].url : 'https://images.unsplash.com/photo-1468245856972-a0333f3f8293?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80' %>">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title">
                    <a href="/campgrounds/<%= camp._id %>"><%= camp.title %></a>
                    
                  </h5>
                  <p class="card-text" style="color:aliceblue">
                    <small>
                      <%= camp.description.substring(0, 150) %>
                    </small>
                  </p>     
                  <p class="card-text text-muted" style="color:aliceblue">
                    <%= camp.location %>
                </p>                
                </div>
              </div>
            </div>
        </div>
    <% } %>
  
  </section>
  